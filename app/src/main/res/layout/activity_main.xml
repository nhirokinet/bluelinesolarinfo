<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.MainActivity">
    <TextView
        android:id="@+id/main_view_date_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/textColorOnThemeColorBackground"
        android:height="36sp"
        android:textSize="24sp"
        android:paddingHorizontal="18sp"
        android:layout_marginHorizontal="8sp"
        android:layout_marginVertical="16sp"
        android:background="@drawable/rounded_button_corner_radius_18sp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/bluelinesolorinfoThemeColor"
        android:layout_marginVertical="4sp"
        />
    <LinearLayout
        android:id="@+id/main_view_region_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/main_view_region_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                />
            <TextView
                android:text=">"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="8sp"
                android:textSize="24sp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="8sp"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/main_view_region_text_line1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <TextView
                android:id="@+id/main_view_region_text_line2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <TextView
                android:id="@+id/main_view_region_timezone_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/bluelinesolorinfoThemeColor"
        android:layout_marginVertical="4sp"
        />
    <LinearLayout
        android:id="@+id/main_view_first_guide_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:text="@string/main_activity_first_guide_add_region_text"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <Button
            android:id="@+id/main_view_first_guide_add_region_button"
            android:text="@string/main_activity_first_guest_add_region_now_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/bluelinesolorinfoThemeColor"
            android:layout_marginVertical="4sp"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/main_view_nolocpriv_guide_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:text="@string/main_activity_nolocpriv_add_location_privilege_text"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <Button
            android:id="@+id/main_view_nolocpriv_guide_add_location_privilege_button"
            android:text="@string/main_activity_nolocpriv_add_location_privilege_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/bluelinesolorinfoThemeColor"
            android:layout_marginVertical="4sp"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/main_view_location_measure_config_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <CheckBox
            android:id="@+id/main_view_location_measure_config_use_elevation_checkbox"
            android:text="@string/main_activity_config_location_measure_use_elevation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/bluelinesolorinfoThemeColor"
            android:layout_marginVertical="4sp"
            />
    </LinearLayout>
</LinearLayout>