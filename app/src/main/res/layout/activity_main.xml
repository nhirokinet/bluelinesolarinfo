<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.MainActivity">
    <TextView
        android:id="@+id/main_view_date_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/textColorOnThemeColorBackground"
        android:height="36sp"
        android:textSize="24sp"
        android:paddingHorizontal="18sp"
        android:layout_marginHorizontal="8sp"
        android:layout_marginVertical="16sp"
        android:background="@drawable/rounded_button_corner_radius_18sp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/bluelinesolorinfoThemeColor"
        android:layout_marginVertical="4sp"
        />
    <LinearLayout
        android:id="@+id/main_view_region_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1.0"
            >
            <TextView
                android:id="@+id/main_view_region_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="8sp"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/main_view_region_text_line1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
                <TextView
                    android:id="@+id/main_view_region_text_line2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
                <TextView
                    android:id="@+id/main_view_region_timezone_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:text="â–¼"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|end"
            android:textSize="24sp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/bluelinesolorinfoThemeColor"
        android:layout_marginVertical="4sp"
        />
    <LinearLayout
        android:id="@+id/main_view_first_guide_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:text="@string/main_activity_first_guide_add_region_text"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <Button
            android:id="@+id/main_view_first_guide_add_region_button"
            android:text="@string/main_activity_first_guest_add_region_now_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/bluelinesolorinfoThemeColor"
            android:layout_marginVertical="4sp"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/main_view_nolocpriv_guide_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:text="@string/main_activity_nolocpriv_add_location_privilege_text"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <Button
            android:id="@+id/main_view_nolocpriv_guide_add_location_privilege_button"
            android:text="@string/main_activity_nolocpriv_add_location_privilege_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/bluelinesolorinfoThemeColor"
            android:layout_marginVertical="4sp"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/main_view_location_measure_config_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <CheckBox
            android:id="@+id/main_view_location_measure_config_use_elevation_checkbox"
            android:text="@string/main_activity_config_location_measure_use_elevation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/bluelinesolorinfoThemeColor"
            android:layout_marginVertical="4sp"
            />
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <LinearLayout
                android:id="@+id/main_view_solar_info_today_area"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:text="@string/main_activity_solar_info_today_sun_header"
                    android:textSize="28sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <TableRow>
                        <TextView
                            android:text="@string/main_activity_solar_info_today_sunrise"
                            android:textSize="16sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            />
                        <TextView
                            android:id="@+id/main_view_solar_info_today_sunrise_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="24sp"
                            android:paddingStart="8sp"
                            android:layout_gravity="right"
                            />
                        <TextView
                            android:text=""
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            />
                    </TableRow>
                    <TableRow>
                        <TextView
                            android:text="@string/main_activity_solar_info_today_sun_culmination"
                            android:textSize="16sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            />
                        <TextView
                            android:id="@+id/main_view_solar_info_today_sun_culmination_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="24sp"
                            android:paddingStart="8sp"
                            />
                        <TextView
                            android:id="@+id/main_view_solar_info_today_sun_culmination_invisible_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingStart="6sp"
                            android:layout_gravity="bottom"
                            />
                    </TableRow>
                    <TableRow>
                        <TextView
                            android:text="@string/main_activity_solar_info_today_sunset"
                            android:textSize="16sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            />
                        <TextView
                            android:id="@+id/main_view_solar_info_today_sunset_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="24sp"
                            android:paddingStart="8sp"
                            android:layout_gravity="right"
                            />
                        <TextView
                            android:text=""
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            />
                    </TableRow>
                </TableLayout>
                <TextView
                    android:id="@+id/main_view_solar_info_today_sun_next_event_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:paddingTop="4sp"
                    />
                <TextView
                    android:id="@+id/main_view_solar_info_today_sun_next_event_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="24sp"
                    />
                <TextView
                    android:text="@string/main_activity_solar_info_today_moon_header"
                    android:textSize="28sp"
                    android:paddingTop="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <net.nhiroki.androidlib.bluelineastroandroidlib.views.MoonPhaseView
                        android:id="@+id/main_view_solar_info_today_moon_phase_view"
                        android:layout_width="32sp"
                        android:layout_height="32sp"
                        />
                    <TextView
                        android:id="@+id/main_view_solar_info_today_moon_phase_days_text"
                        android:textSize="24sp"
                        android:paddingStart="8sp"
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />
                    <TextView
                        android:text="@string/main_activity_solar_info_today_moon_is_noon_info"
                        android:paddingStart="8sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        />
                </LinearLayout>
                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <TableRow>
                        <TextView
                            android:text="@string/main_activity_solar_info_today_moonrise"
                            android:textSize="16sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            />
                        <TextView
                            android:id="@+id/main_view_solar_info_today_moonrise_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="24sp"
                            android:paddingStart="8sp"
                            android:layout_gravity="right"
                            />
                        <TextView
                            android:text=""
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            />
                    </TableRow>
                    <TableRow>
                        <TextView
                            android:text="@string/main_activity_solar_info_today_moon_culmination"
                            android:textSize="16sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            />
                        <TextView
                            android:id="@+id/main_view_solar_info_today_moon_culmination_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="24sp"
                            android:paddingStart="8sp"
                            android:layout_gravity="right"
                            />
                        <TextView
                            android:id="@+id/main_view_solar_info_today_moon_culmination_invisible_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingStart="6sp"
                            android:layout_gravity="bottom"
                            />
                    </TableRow>
                    <TableRow>
                        <TextView
                            android:text="@string/main_activity_solar_info_today_moonset"
                            android:textSize="16sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            />
                        <TextView
                            android:id="@+id/main_view_solar_info_today_moonset_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="24sp"
                            android:paddingStart="8sp"
                            android:layout_gravity="right"
                            />
                        <TextView
                            android:text=""
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            />
                    </TableRow>
                </TableLayout>
                <TextView
                    android:id="@+id/main_view_solar_info_today_moon_next_event_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:paddingTop="4sp"
                    />
                <TextView
                    android:id="@+id/main_view_solar_info_today_moon_next_event_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="24sp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="@color/bluelinesolorinfoThemeColor"
                    android:layout_marginVertical="4sp"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/main_view_solar_info_now_area"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <TableRow>
                        <TextView
                            android:text="@string/main_activity_solar_info_now_localtime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            />
                        <TextView
                            android:id="@+id/main_view_solar_info_now_greenwich_localtime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingStart="8sp"
                            android:textSize="20sp"
                            />
                    </TableRow>
                    <TableRow>
                        <TextView
                            android:text="@string/main_activity_solar_info_now_sidereal_time_greenwich"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            />
                        <TextView
                            android:id="@+id/main_view_solar_info_now_greenwich_sidereal_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingStart="8sp"
                            android:textSize="20sp"
                            />
                    </TableRow>
                    <TableRow>
                        <TextView
                            android:text="@string/main_activity_solar_info_now_sidereal_time_local"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            />
                        <TextView
                            android:id="@+id/main_view_solar_info_now_local_sidereal_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingStart="8sp"
                            android:textSize="20sp"
                            />
                    </TableRow>
                </TableLayout>
                <TextView
                    android:text="@string/main_activity_solar_info_today_sun_header"
                    android:textSize="24sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="6sp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:text="@string/main_activity_solar_info_now_azimuth_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />
                    <TextView
                        android:id="@+id/main_view_solar_info_now_sun_azimuth"
                        android:paddingStart="8sp"
                        android:textSize="20sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />
                    <TextView
                        android:text="@string/main_activity_solar_info_now_elevation_label"
                        android:paddingStart="20sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />
                    <TextView
                        android:id="@+id/main_view_solar_info_now_sun_elevation"
                        android:paddingStart="8sp"
                        android:textSize="20sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />
                </LinearLayout>
                <TextView
                    android:text="@string/main_activity_solar_info_today_moon_header"
                    android:textSize="24sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="6sp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:text="@string/main_activity_solar_info_now_azimuth_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />
                    <TextView
                        android:id="@+id/main_view_solar_info_now_moon_azimuth"
                        android:paddingStart="8sp"
                        android:textSize="20sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />
                    <TextView
                        android:text="@string/main_activity_solar_info_now_elevation_label"
                        android:paddingStart="20sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />
                    <TextView
                        android:id="@+id/main_view_solar_info_now_moon_elevation"
                        android:paddingStart="8sp"
                        android:textSize="20sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="@color/bluelinesolorinfoThemeColor"
                    android:layout_marginVertical="4sp"
                    />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>